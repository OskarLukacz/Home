<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.413">


        <Button
                android:id="@+id/zeroOn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/zeroOn"
                android:onClick="publish"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="144dp"/>

        <Button
                android:id="@+id/zeroOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Zero OFF"
                android:onClick="publish"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="144dp" style="@style/Widget.AppCompat.Button"/>

        <Button
                android:id="@+id/oneOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="One ON"
                android:onClick="publish"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="144dp" style="@style/Widget.AppCompat.Button"/>

        <Button
                android:id="@+id/oneOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="One OFF"
                android:onClick="publish"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="144dp" style="@style/Widget.AppCompat.Button"/>

    </LinearLayout>

    <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.443">


        <Button
                android:id="@+id/twoOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Two ON"
                android:onClick="publish"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="144dp" style="@style/Widget.AppCompat.Button"/>

        <Button
                android:id="@+id/twoOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Two OFF"
                android:onClick="publish"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="144dp" style="@style/Widget.AppCompat.Button"/>

        <Button
                android:id="@+id/threeOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Three ON"
                android:onClick="publish"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="144dp" style="@style/Widget.AppCompat.Button"/>

        <Button
                android:id="@+id/threeOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Three OFF"
                android:onClick="publish"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="144dp" style="@style/Widget.AppCompat.Button"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="292dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
                android:text="Latest Status:"
                android:layout_height="105dp" android:id="@+id/textView" android:layout_weight="1"
                android:layout_width="245dp"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>